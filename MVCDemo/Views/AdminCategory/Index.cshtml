@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Categories</h2>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td> <a href="~/AdminCategory/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a> </td>
            <td> <a href="~/AdminCategory/UpdateCategory/@item.Id" class="btn btn-warning">Güncelle</a> </td>
            <td> <a href="#" class="btn btn-primary">Başlıklar</a> </td>
        </tr>
    }

</table>

<br />

<a href="~/AdminCategory/AddCategory" class="btn btn-dark">New Category</a>

