@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "WritersHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Headings</h2>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Heading
                            </th>
                            <th style="width: 30%">
                                Author
                            </th>
                            <th style="width: 8%" class="text-center">
                                Category
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    <a>
                                        @item.Name
                                    </a>
                                    <br />
                                    <small>
                                        @item.CreatedAt.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" width="20px" src="@item.Writer.Image">
                                            <small>
                                                @item.Writer.Name @item.Writer.Surname
                                            </small>
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success">@item.Category.Name</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/GetContentsByHeading/@item.Id">
                                        <i class="fas fa-folder">
                                        </i>
                                        Contents
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/UpdateHeading/@item.Id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                    }
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <br />
        <a href="~/WriterPanel/AddHeading" class="btn btn-dark">Create New</a>
    </section>
</body>
</html>
