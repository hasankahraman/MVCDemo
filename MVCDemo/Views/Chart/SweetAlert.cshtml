
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SweetAlert</h2>
<br />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<button class="btn btn-primary" id="btn1">Button 1</button>
<button class="btn btn-outline-secondary" id="btn2">Button 2</button>
<button class="btn btn-light" id="btn3">Button 3</button>

<script>
    $('#btn1').click(function () {
        swal("Hello world!");
    });
</script>

<script>
    $('#btn2').click(function () {
        swal("Here's the title!", "...and here's the text!");
    });
</script>

<script>
    $('#btn3').click(function () {
        swal("Good job!", "You clicked the button!", "success");
    });
</script>