@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Username</th>
        <th>Role</th>
        <th>Status</th>
        <th>Make Passive</th>
        <th>Change Role</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Username</td>
            <td>@item.Role</td>
            <td>@item.Status</td>
            <td> <a href="~///@item.Id" class="btn btn-danger">Make Passive</a> </td>
            <td> <a href="~///@item.Id" class="btn btn-warning">Change Role</a> </td>
        </tr>
    }

</table>

<br />

<a href="~//" class="btn btn-dark">New Admin User</a>
